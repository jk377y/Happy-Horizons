<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>Happy Horizons</title>
		<script src="/js/script.js" defer></script>
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.1/css/all.min.css" />
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.css" />
		<link rel="stylesheet" href="/css/style.css" />
	</head>
	<body>

		<header>
			<div class="header-container">
				<div class="titleDiv">
					<img class="logo" src="/images/logo.webp" alt="logo" />
					<h1 class="title">Happy Horizons</h1>
				</div>
				<nav class="navBar">
					<a class="navLink" href="/">Home</a>
					<a class="navLink" href="/navigate/contactUs">Contact Us</a>
					{{#if loggedIn}}
						<a class="navLink" href="/navigate/myPortal">MyPortal</a>
						<a class="navLink" href="/navigate/ticket">Open Ticket</a>
						{{#if isAdmin}}
							<a class="navLink" href="/navigate/admin">Admin</a>
						{{/if}}
					{{/if}}
				</nav>
				<button class="hamburger">
					<div class="bar"></div>
				</button>
				<nav class="mobileNav border">
					<a class="mobileNavLink" href="/">Home</a>
					<a class="mobileNavLink" href="/navigate/contactUs">Contact Us</a>
					{{#if loggedIn}}
						<a class="mobileNavLink" href="/navigate/myPortal">MyPortal</a>
						<a class="mobileNavLink" href="/navigate/ticket">Open Ticket</a>
						<a class="mobileNavLink" href="/navigate/admin">Admin</a>
					{{/if}}
				</nav>
			</div>
		</header>

		{{#if loggedIn}}
			<section class="logoutWrap">
				<form action="/logout" method="POST" class="login">
					<h2>Hello, {{firstName}}</h2>
					<div class="logoutSubmitBtnDiv">
						<input class="logoutSubmitBtn submitBtn" type="submit" value="Logout" />
					</div>
				</form>
			</section>
		{{else}}
			<section class="loginWrap">
				<form action="/" method="POST" class="login">
					<h2>Resident Login</h2>
					<input class="loginInputField" type="email" id="email" name="email" placeholder="Enter Email" />
					<input class="loginInputField" type="password" id="password" name="password" placeholder="Enter Password" />
					<div class="loginSubmitBtnDiv">
						<input class="loginSubmitBtn submitBtn" type="submit" value="Login" />
					</div>
				</form>
			</section>
		{{/if}}

		<main>
			{{{body}}}
		</main>

		<div class="footer-container">
			<nav class="footerNav">
				<a href="https://www.facebook.com/" target="_blank" class="icon facebook">
					<div class="tooltip fb">Facebook</div>
					<span><i class="fab fa-facebook-f"></i></span>
				</a>
				<a href="https://www.instagram.com/" target="_blank" class="icon insta">
					<div class="tooltip ig">Instagram</div>
					<span><i class="fab fa-instagram"></i></span>
				</a>
				<a href="https://twitter.com/" target="_blank" class="icon twitter">
					<div class="tooltip tw">Twitter</div>
					<span><i class="fab fa-twitter"></i></span>
				</a>
			</nav>
		</div>

	</body>
	<script src="https://cdn.jsdelivr.net/npm/swiper@9/swiper-bundle.min.js"></script>
	<script src="/js/indexSlideshow.js"></script>
</html>